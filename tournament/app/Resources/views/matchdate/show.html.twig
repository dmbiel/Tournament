{% extends 'base.html.twig' %}

{% block body %}
    <h1>Matchdate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matchDate.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ matchDate.date }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if matchDate.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('matchdate_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('matchdate_edit', { 'id': matchDate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
